## Amber 14 forcefield

source leaprc.protein.ff14SB
source leaprc.water.spce

# Load the system
mol = loadpdb AMBERPDB

# Add solvent and neutralize with ions
charge mol # get net charge

#addions mol Cl- 0
#addions mol Na+ 0
check mol

# Quality control
set default PBRadii mbondi2     # Required for MMGBSA calculations

# Save solvated system
saveamberparm mol PRMTOP INPCRD
savepdb mol PDBLEAP

quit
