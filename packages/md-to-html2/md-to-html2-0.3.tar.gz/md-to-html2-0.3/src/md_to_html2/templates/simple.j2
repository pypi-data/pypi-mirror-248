{% import 'lightgallery.j2' as LightGallery -%}
<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Created using https://codeberg.org/gi1242/md-to-html; don't edit directly --!>
    <meta charset='utf-8'>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    {# <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css"> -#}
    {% block mathjax -%}
      {% if uses_math -%}
	{% block mathjax_configure -%}
	  {% if standalone -%}
	    <script>
	      {% include 'shared/mathjax-config.js' %}
	      {{mathjax_config}}
	    </script>
	  {% else -%}
	    <script src='{{shared_prefix}}/mathjax-config.js'></script>
	    <script>{{mathjax_config}}</script>
	  {% endif -%}
	{% endblock -%}
	{% block mathjax_load -%}
	  <script src="https://polyfill.io/v3/polyfill.min.js?features=es6"></script>
	  <script id="MathJax-script" async
	    src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js">
	  </script>
	{% endblock -%}
      {% endif -%}
    {% endblock -%}
    {% if standalone -%}
      <style>
	{% include 'shared/justify.css' -%}
	{% if uses_codehilite -%}
	  {% include 'shared/codehilite.css' -%}
	{% endif -%}
      </style>
    {% else -%}
      <link href="{{shared_prefix}}/styles.css" rel="stylesheet">
    {% endif -%}
    {% if lightgallery -%}{{LightGallery.load()}}{% endif -%}
    {% block end_head -%}{{end_head}}{% endblock -%}
    <title>{{title|d('md-to-html')}}</title>
  </head>
  <body {% block body_args %}{% endblock %}>
    {% block header -%}{{header}}{% endblock -%}
    {% block content -%}
      <div class="container-lg py-lg-5 text-justify">
	{{content}}
      </div>
    {% endblock -%}
    {% block footer -%}
      <div class='container'>
	<footer class='pt-4 small text-body-secondary'>
	  {{- footer|markdown -}}
	</footer>
      </div>
    {% endblock -%}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    {% block end_body -%}
      {% if standalone -%}
	<script>
	  {% include 'shared/themeswitch.js' -%}
	</script>
      {% else -%}
	<script src='{{shared_prefix}}/themeswitch.js'></script>
      {% endif -%}
      {{end_body -}}
    {% endblock -%}
    {% block lightgallery_configure scoped -%}
      {% if lightgallery -%}
	{{lightgallery_configure | d(LightGallery.configure()) -}}
      {% endif -%}
    {% endblock -%}
  </body>
</html>

