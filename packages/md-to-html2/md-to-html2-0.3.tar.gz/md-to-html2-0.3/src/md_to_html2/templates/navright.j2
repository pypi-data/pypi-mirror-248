{% extends 'simple.j2' %}
{% block body_args %}data-bs-spy="scroll" data-bs-target="#toc"{% endblock %}
{% block end_head -%}
  {{super()}}
  {% if standalone -%}
    <style>
      {% include 'shared/navright.css' -%}
    </style>
  {% endif -%}
{% endblock -%}
{% block content -%}
  <div class="container py-lg-5 text-justify">
    <div class="row" >
      <div class="col-md-9">
      {{content}}
      </div>
      <div class="col-md-3">
	<div class='sticky-top'>
	  {% block before_toc %}{{before_toc}}{% endblock %}
	  <nav id='toc' class='nav d-none d-md-block d-print-none
	      small text-body-secondary overflow-x-hidden'>
	    {# <strong class='h6 my-2 ms-3'>On this page</strong>
	    <hr class='my-2 ms-3' /> #}
	    <a role='button' class="h6 my-2 link-secondary link-underline link-underline-opacity-0" data-bs-toggle="collapse" data-bs-target="#toc1">
	      ‚èµ On this page
	    </a>
	    <div id='toc1' class='collapse show'>
	      <hr class='my-2 ms-3' />
	      {{toc}}{# Looks like:<div class='toc'><ul>...</ul></div> #}
	    </div>
	  </nav>
	  {% block after_toc %}{{after_toc}}{% endblock %}
	</div>
      </div>
    </div>
  </div>
{% endblock -%}
